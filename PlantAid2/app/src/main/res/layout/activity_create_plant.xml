<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreatePlantActivity">
    <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textSize="20sp"
            android:id="@+id/editText4"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.856" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/editImg"/>
    <TextView
            android:text="Last Watered:"
            android:layout_width="166dp"
            android:layout_height="50dp"
            android:id="@+id/textView4"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" tools:textSize="24sp" app:layout_constraintEnd_toStartOf="@+id/editText4"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/editImg"/>
    <TextView
            android:layout_width="141dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.856" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4"/>
    <Button
            android:text="Water Now"
            android:layout_width="88dp"
            android:layout_height="55dp"
            android:id="@+id/waterNow" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="194dp" app:srcCompat="@android:color/holo_green_light"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"/>
    <TextView
            android:text="Watering Freq:"
            android:layout_width="168dp"
            android:layout_height="52dp"
            android:textSize="20sp"
            android:id="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/editText3"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" tools:textSize="24sp" app:layout_constraintHorizontal_bias="0.32"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <Button
            android:text="Edit Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editImg" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.44" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text="NAME"
            android:layout_width="214dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:id="@+id/edittextView" tools:textSize="45sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            android:textSize="40sp"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.0"
            android:visibility="visible"/>
</android.support.constraint.ConstraintLayout>